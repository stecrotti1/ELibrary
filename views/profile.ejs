                        <% if (typeof user !== "undefined" ) { %>
                            <% if (user.email) { %>
                                <div class="form-group">
                                    <div class="form-floating col-5 shadow-lg rounded">
                                        <input type="email" id="email" value="<%= user.email %>"
                                               class="form-control" disabled>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                            <% } %>
