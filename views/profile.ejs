                                    <label for="new-email">New Email</label>
                                </div>
                                <span class="text-danger" id="new-email-validation"></span>
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary shadow-lg rounded" id="save-new-email">Save</button>
                        <% } %>
                    </form>

