<%- include('partials/header', { title: "Profile" }); -%>
<!-- FIXME: navs and tabs -->
    <main>
        <br />
        <div class="container">

            <div class="d-flex align-items-start">
                <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <button class="nav-link active" id="v-pills-profile-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile"
                        aria-selected="true">Profile</button>
                    <button class="nav-link" id="v-pills-messages-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages"
                        aria-selected="false">Esempio 1</button>
                    <button class="nav-link" id="v-pills-settings-tab" data-bs-toggle="pill"
                        data-bs-target="#v-pills-settings" type="button" role="tab" aria-controls="v-pills-settings"
                        aria-selected="false">Esempio 2</button>
                </div>
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel"
                        aria-labelledby="v-pills-profile-tab">

                        <div class="container">
                            <div class="row">

                                <img src="/images/profile.svg" alt=profile height="100" width="200"
                                    class="rounded-circle mx-auto d-block">
    
                                <form>
                                    <div class="form-group">
                                        <div class="form-floating">
                                            <% if (typeof user !=="undefined" ) { %>
                                                <input type="email" id="email" class="form-control"
                                                    placeholder="name@email.com" value="<%= user.email %>" readonly>
                                                <% } %>
                                                    <label for="email">Email</label>
                                        </div>
                                    </div>
    
                                    <div class="form-group">
                                        <div class="form-floating">
                                            <input type="email" id="new-email" name="new-email" class="form-control"
                                                placeholder="name@email.com" required>
                                            <label for="new-email">New Email</label>
                                        </div>
                                        <span class="text-danger" id="new-email-validation"></span>
                                    </div>
    
                                    <br />
    
                                    <button type="submit" class="btn btn-primary" id="save-new-email">Save</button>
                                </form>
                            </div>
    
                            <hr />
    
                            <div class="row">
                                <form>
                                    <div class="form-group">
                                        <div class="form-floating">
                                            <input type="password" id="new-password" name="new-password"
                                                class="form-control" placeholder="New Password" required>
                                            <label for="new-password">New Password</label>
                                        </div>
                                        <span class="text-danger" id="new-password-validation"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-floating">
                                            <input type="password" id="confirm-new-password" name="confirm-new-password"
                                                class="form-control" placeholder="Confirm New Password" required>
                                            <label for="confirm-new-password">Confirm New Password</label>
                                        </div>
                                        <span class="text-danger" id="new-password-validation"></span>
                                    </div>
    
                                    <br />
    
                                    <button type="submit" class="btn btn-primary" id="save-new-password">Save</button>
                                </form>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
                    messages tab
                </div>
                <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                    settings tab
                </div>
            </div>
        </div>

        </div>
    </main>

<%- include('partials/footer-alt'); -%>