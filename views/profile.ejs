                    Orders
                </button>

            </div>
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-email" role="tabpanel"
                     aria-labelledby="v-pills-email-tab">

                    <form method="POST" action="/profile/update-email">

                        <% if (typeof user !== "undefined" ) { %>
                            <% if (user.email) { %>
                                <div class="form-group">
                                    <div class="form-floating col-5">
                                        <input type="email" id="email" value="<%= user.email %>"
                                               class="form-control" disabled>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                            <% } %>
                            <br/>
                            <div class="form-group">
                                <div class="form-floating col-5">
                                    <input type="email" id="new-email" name="new-email" class="form-control"
                                           placeholder="New Email" required>
                                    <label for="new-email">New Email</label>
                                </div>
                                <span class="text-danger" id="new-email-validation"></span>
                            </div>
                            <br/>
                            <button type="submit" class="btn btn-primary" id="save-new-email">Save</button>
                        <% } %>
                    </form>

                    <img src="/images/profile.svg" alt="profile" height="50%" width="50%">

                </div>
                <div class="tab-pane fade" id="v-pills-password" role="tabpanel"
                     aria-labelledby="v-pills-password-tab">

                    <form method="POST" action="/profile/update-password">
                        <div class="form-group">
                            <div class="form-floating col-5">
                                <input type="password" id="current-password" name="current-password"
                                       class="form-control" placeholder="Current Password" required>
                                <label for="current-password">Current Password</label>
                            </div>
                        </div>
                        <br/>
                        <div class="form-group">
                            <div class="form-floating col-5">
                                <input type="password" id="new-password" name="new-password" class="form-control"
                                       placeholder="New Password" required>
                                <label for="new-password">New Password</label>
                            </div>
                            <span class="text-danger" id="new-password-validation"></span>
                        </div>
                        <div class="form-group">
                            <div class="form-floating col-5">
                                <input type="password" id="confirm-new-password" name="confirm-new-password"
                                       class="form-control" placeholder="Confirm Password" required>
                                <label for="confirm-new-password">Confirm Password</label>
                            </div>
                            <span class="text-danger" id="confirm-new-password-validation"></span>
                        </div>
                        <br/>
                        <button type="submit" class="btn btn-primary" id="save-new-password">Save</button>

                    </form>
                    <br/>
                    <img src="/images/password.svg" alt="profile" height="30%" width="30%">

                </div>
                <div class="tab-pane fade" id="v-pills-favourites" role="tabpanel"
                     aria-labelledby="v-pills-favourites-tab">

                    <!-- TODO: -->


                    <img src="/images/bookmarks.svg" alt="bookmarks" height="50%" width="50%">

                </div>
                <div class="tab-pane fade" id="v-pills-orders" role="tabpanel" aria-labelledby="v-pills-orders-tab">

                    <% if (typeof orders !== "undefined" ) { %>
                        <% if (orders.length > 0) { %>
                            <table class="table">
                                <thead>
                                <tr class="table-primary">
                                    <th>Date</th>
                                    <th>Book</th>
                                    <th>Order Type</th>
                                    <th>Status</th>
                                    <th>Price</th>
                                    <th>Address</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td>
                                            <%= order.date %>
                                        </td>
                                        <td>
                                            <%= order.book.title %>
                                        </td>
                                        <td>
                                            <%= order.type %>
                                        </td>
                                        <td>
                                            <%= order.status %>
                                        </td>
                                        <td>
                                            <%= order.price %>
                                        </td>
                                        <td>
                                            <%= order.address %>
                                        </td>
                                    </tr>
                                <% }); %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="alert alert-info" role="alert">
                                You have no orders yet.
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    </div>
</main>

<hr class="divider"/>

<%- include('partials/footer-alt'); -%>