<%# orders sent by all customers (viewed by admin only) %>

<%- include('partials/header', { title: "Customers Orders", active: "users-orders" }) %>

<main>
    
    <h5>Orders sent by all customers</h5>

    <hr />

    <table class="table shadow-lg">
        <thead>
            <tr class="table-primary">
                <th>
                    Id
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Date
                </th>
                <th>
                    Price
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach((order) => { %>
                <tr>
                    <td><%= order.id %></td>
                    <td><%= order.customer.email %></td>
                    <td><%= order.date %></td>
                    <td><%= order.price === 0 ? '---' : order.price %></td>
                    <td><%= order.type %></td>
                    <td><a href="/orders/order-details/<%= order.id %>">Details</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
        </tbody>
    </table>


</main>
</body>
</html>